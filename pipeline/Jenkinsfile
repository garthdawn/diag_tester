pipeline {
    agent any

    stages {
        stage('Pull from git repo diag-tester.') {
            steps {
                checkout scm
            }
        }

        stage('quickstart, install dependencies') {
            steps {
                sh '''
                    ./quickstart.sh
                    source .venv/bin/activate 
                '''
            }
        }

        stage('Run Tests') {
            steps {
                sh '''
                    source .venv/bin/activate
                    pytest tests/ -sv \
                        --alluredir=reports/allure-report \
                        --junitxml=reports/pytest-result.xml
                '''
            }
        }
    }

    post {
        always {
            junit 'reports/*.xml'
        }
    }
}