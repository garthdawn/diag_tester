pipeline {
    agent any

    triggers {
        githubPush()
    }

    options {
        checkoutToSubdirectory('diag_tester')
        buildDiscarder(logRotator(daysToKeepStr: '7'))
    }

    tools {
        allure 'Allure'
    }

    stages {
        stage('Pull from git repo diag-tester.') {
            steps {
                checkout scm
            }
        }

        stage('quickstart, install dependencies') {
            steps {
                sh '''
                    chmod +x quickstart.sh
                    ./quickstart.sh
                '''
            }
            post {
                success {
                    githubChecks status: 'COMPLETED', conclusion: 'SUCCESS', name: 'Install Dependencies'
                }
                failure {
                    githubChecks status: 'COMPLETED', conclusion: 'FAILURE', name: 'Install Dependencies'
                }
            }
        }

        stage('Run Tests') {
            steps {
                sh '''
                    source .venv/bin/activate
                    pytest tests/ -sv \
                        --alluredir=reports/allure-reports \
                        --junitxml=reports/pytest-result.xml
                '''
            }
            post {
                success {
                    githubChecks status: 'COMPLETED', conclusion: 'SUCCESS', name: 'Run Tests'
                }
                failure {
                    githubChecks status: 'COMPLETED', conclusion: 'FAILURE', name: 'Run Tests'
                }
            }
        }
    }

    post {
        always {
            junit 'reports/*.xml'
            allure (
                includeProperties: false, 
                jdk: '', 
                reportBuildPolicy: 'ALWAYS', 
                results: [[path: 'reports/allure-reports']]
            )
            script {
                def finalResult = currentBuild.currentResult == 'SUCCESS' ? 'SUCCESS' : 'FAILURE'
                githubChecks(
                    status: 'COMPLETED',
                    conclusion: finalResult,
                    name: 'Jenkins Build', 
                    detailsURL: env.BUILD_URL,
                    output: [
                        title: "Build ${finalResult}",
                        summary: "Jenkins Construct ${finalResult.toLowerCase()}, Details: ${env.BUILD_URL}"
                    ]
                )
            }
        }
    }
}